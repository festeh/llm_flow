{
    "version": "2.0.0",
    "tasks": [
        {
            "name": "Launch LSP server",
            "type": "process",
            "label": "server",
            "command": "go",
            "args": [
                "run",
                "${workspaceFolder}/cmd/lsp-server/main.go"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": ["$go"]
        }
    ]
}
